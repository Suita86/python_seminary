из пути импорта ОС

file_base = "base.txt"
последний_id = 0
все_данные = []

если нет path.exists(file_base):
    с open(file_base, "w", encoding="utf-8") как _:
        проходить


определение read_records():
    глобальный last_id, all_data

    с open(file_base, encoding="utf-8") как f:
        all_data = [i.strip() для i в f]
        если все_данные:
            last_id = int(all_data[-1].split()[0])
            вернуть все_данные
    возвращаться []


защита show_all():
    если все_данные:
        печать(*все_данные, sep="\n")
    еще:
        распечатать("Пустые данные")


определение add_new_contact():
    глобальный last_id
    array = ["фамилия", "имя", "отчество", "номер_телефона"]
    строка = ""
    для я в массиве:
        строка += ввод (f "Введите {i}") + " "
    последний_id += 1

    с open(file_base, "a", encoding="utf-8") как f:
        f.write(f"{last_id} {строка}\n")


определение main_menu():
    играть = правда
    во время игры:
        read_records()
        answer = input("Телефонная книга:\n"
                       "1. Показать все записи\n"
                       "2. Добавить запись\n"
                       "3. Поиск записи\n"
                       "4. Изменить\n"
                       "5. Удалить\n"
                       "6. Опыт/имп\n"
                       "7. Выход\n")
        соответствующий ответ:
            Дело 1":
                показать все()
            случай "2":
                add_new_contact()
            случай "3":
                проходить
            случай "4":
                проходить
            случай "5":
                играть = Ложь
            случай _:
                print("Попробуй еще раз!\n")


